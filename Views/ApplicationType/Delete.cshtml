@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebStore.Models.ApplicationType
<link rel="stylesheet" href="/css/formStyle.css">

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Application Type</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-row form-group row">
                    <div class="col-4">
                        @* Для антотации данных в Model *@
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Title" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <a class="btn btn-primary w-100"
                               asp-controller="ApplicationType" asp-action="Index">BACK</a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="DELETE"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>