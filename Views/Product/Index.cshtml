@model IEnumerable<WebStore.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>

        <div class="col-6" style="text-align: end">
            <a class="btn btn-primary" asp-action="AddEdit">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" width="100%">
            <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Category</th>
                <th>Application Type</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.Title</td>
                    <td width="1 0%">@item.Price</td>
                    <td width="30%">@item.Category.Title</td>
                    <td width="30%">@item.Application.Title</td>
                    <td class="text-center">
                        <div class="btn-group w-65" role="group">
                            <a asp-action="AddEdit" asp-route-Id="@item.Id" class="btn btn-primary me-2"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <h2>Product Not Found</h2>
    }
</div>