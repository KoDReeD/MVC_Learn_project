@* принимаем то, что передали из контроллера *@
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<WebStore.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6" style="text-align: end">
            <a class="btn btn-primary"
               asp-controller="Category" asp-action="AddEdit">
                Create New Category
            </a>
        </div>
    </div>

    <br/>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped"
               style="width: 100%">
            <thead>
            <tr>
                <th>Title</th>
                <th>Display Order</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td width="50%">@category.Title</td>
                    <td width="30%">@category.DisplayOrder</td>
                    <td>
                        <div class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="AddEdit" asp-route-Id="@category.Id" class="btn btn-primary me-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-danger">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <h2>No category exists</h2>
    }
</div>