@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebStore.Models.Category
<link rel="stylesheet" href="/css/formStyle.css">

<form method="post" asp-action="AddEdit">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            @if (Model.Id == 0)
            {
                <h2 class="text-info pl-3">Create Category</h2>
            }
            else
            {
                <h2 class="text-info pl-3">Edit Category</h2>
            }

        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-row form-group row">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Title" class="form-control"/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row form-group row">
                    <div class="col-4">
                        @* Для антотации данных в Model *@
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="inputForm form-control"/>
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <a class="btn btn-primary w-100"
                               asp-controller="Category" asp-action="Index">
                                BACK
                            </a>
                        </div>
                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="SAVE"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}